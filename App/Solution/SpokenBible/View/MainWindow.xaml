<Window x:Class="SpokenBible.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="clr-namespace:SpokenBible.Components.AutoComplete"
    Title="MainWindow" Height="650" Width="900">
    <Grid Name="aua">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        
        <a:AutoCompleteComboBox x:Name="busca" Grid.Row="0" Grid.Column="0" Text="TSa">
            <TextBlock>Teste</TextBlock>
            <TextBlock>asdfasasdf</TextBlock>
        </a:AutoCompleteComboBox>
        <FlowDocumentReader Grid.Row="1" Grid.Column="0" ViewingMode="TwoPage">
            <FlowDocument x:Name="document" ColumnWidth="5000">
            </FlowDocument>
        </FlowDocumentReader>
    </Grid>
</Window>
